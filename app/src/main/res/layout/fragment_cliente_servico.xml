<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gui.cliente.ClienteServico"
    android:background="@color/white">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="9"
        android:columnCount="2">

        <ImageView
            android:id="@+id/imageServico"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="20dp"
            android:src="@drawable/icon" />

        <TextView
            android:id="@+id/textoServico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginTop="20dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/valorServico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginTop="60dp"
            android:text="TextView" />

        <ImageView
            android:id="@+id/imageFornecedor"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="20dp"
            android:src="@drawable/icon" />

        <TextView
            android:id="@+id/nomeFornecedor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginTop="20dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/enderecoFornecedor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginTop="60dp"
            android:paddingTop="0dp"
            android:text="TextView" />

    </GridLayout>

</FrameLayout>