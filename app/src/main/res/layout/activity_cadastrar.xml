<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="9"
    android:background="@color/white"
    android:layout_centerHorizontal="true"
    tools:context=".gui.usuario.Cadastro">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/icone"
        app:srcCompat="@drawable/icon"
        android:layout_row="0"
        android:layout_columnSpan="2"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/labelNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:text="@string/Nome"
        android:textColor="@color/black"
        tools:text="Nome"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_marginStart="28dp" />

    <EditText
        android:id="@+id/inputNome"
        style="@drawable/bottom_border_input"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_gravity="start"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="10dp"
        android:autofillHints="@string/digite_seu_nome"
        app:backgroundTint="@color/black"
        android:ems="10"
        android:hint="@string/digite_seu_nome"
        android:inputType="textPersonName"
        android:singleLine="true"
        android:text="@string/nameInput"
        android:textColor="@android:color/black"
        android:textColorHint="@color/black" />

    <TextView
        android:id="@+id/labelCpf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:text="@string/CPF"
        android:textColor="@color/black"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="center"
        />

    <EditText
        android:id="@+id/inputCpf"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_gravity="start"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="10dp"
        android:autofillHints="@string/digite_seu_cpf"
        app:backgroundTint="@color/black"
        android:ems="10"
        android:hint="@string/digite_seu_cpf"
        android:inputType="textPersonName"
        android:maxLength="11"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <TextView
        android:id="@+id/labelEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:text="@string/Email"
        android:textColor="@color/black"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_gravity="center"
        />

    <EditText
        android:id="@+id/inputEmail"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_gravity="start"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="10dp"
        android:autofillHints="@string/digite_seu_e_mail"
        app:backgroundTint="@color/black"
        android:ems="10"
        android:hint="@string/digite_seu_e_mail"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:text="@string/senha"
        android:textColor="@color/black"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_gravity="center"
        />

    <EditText
        android:id="@+id/inputPassword"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_gravity="start"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="10dp"
        android:autofillHints="@string/Digite_sua_senha"
        app:backgroundTint="@color/black"
        android:ems="10"
        android:hint="@string/Digite_sua_senha"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:text="@string/senha"
        android:textColor="@color/black"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_gravity="center"
        />

    <EditText
        android:id="@+id/rsenha"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_row="5"
        android:layout_column="1"
        android:layout_gravity="start"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="10dp"
        app:backgroundTint="@color/black"
        android:ems="10"
        android:hint="Repita sua senha"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:text="@string/sexo"
        android:textColor="@color/black"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_gravity="center"
        />

    <Spinner
        android:id="@+id/sexo"
        android:layout_width="196dp"
        android:layout_height="41dp"
        android:layout_row="6"
        android:layout_column="1"
        android:layout_gravity="start"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:text="@string/tipo"
        android:textColor="@color/black"
        android:layout_row="7"
        android:layout_column="0"
        android:layout_gravity="center"
        />

    <Spinner
        android:id="@+id/tipo"
        android:layout_width="196dp"
        android:layout_height="41dp"
        android:layout_row="7"
        android:layout_column="1"
        android:layout_gravity="start"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/cadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_light"
        android:onClick="cadastrarUsuario"
        android:text="@string/Cadastrar"
        android:layout_row="8"
        android:layout_columnSpan="2"
        android:layout_gravity="top|center"        />

</GridLayout>